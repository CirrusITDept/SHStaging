  <record model='ir.ui.view' id='cli_crmcustomer__view_search_mod'>
        <field name='name'>res.partner.tree</field>
        <field name='model'>res.partner</field> 
        <field name='inherit_id' ref='base.view_partner_tree' />
        <field name='priority'>99</field>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name = 'city']" position = 'after'>  
            <field name = "zip"/>
            </xpath>   
        </field>
    </record>

  <record model='ir.ui.view' id='cli_add_computed_to_crm_view_mod'>
        <field name='name'>crm.leahd.form</field>
        <field name='model'>crm.lead</field> 
        <field name='inherit_id' ref='crm.crm_lead_view_form' />
        <field name='priority'>99</field>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name = 'planned_revenue']" position = 'replace'>  
            <field name = "computed_ave_quotes"/>
            </xpath>   
        </field>
    </record>


  <record model='ir.ui.view' id='cli_add_computed_to_crm_tree_view_mod'>
        <field name='name'>crm.lead.tree.opportunity</field>
        <field name='model'>crm.lead</field> 
        <field name='inherit_id' ref='crm.crm_case_tree_view_oppor' />
        <field name='priority'>99</field>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name = 'planned_revenue']" position = 'replace'>  
            <field name = "computed_ave_quotes"/>
            </xpath>   
        </field>
    </record>


