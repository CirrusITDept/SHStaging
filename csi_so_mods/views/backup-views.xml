<!-- Dash Form view -->

<record id="view_sales_dashboard_record_form" model="ir.ui.view">
    <field name="name">csi_dash_opsbyday.form</field>
    <field name="model">dashboard.sales.opsbyday</field>
    <field name="arch" type="xml">
      <form string="Schedule record">
	      <group>
	      	<field name="user_id"/>
          <field name="Total"/>
       </group>
     </form>
    </field>
</record>

<!-- Dash tree (list) view-->
<record id="view_sales_dashboard_record_tree" model="ir.ui.view">
    <field name="name">csi_dashopsbyday.tree</field>
    <field name="model">dashboard.sales.opsbyday</field>
    <field name="arch" type="xml">
      <tree string="Schedule records">
        <field name="user_id" optional="hide"/>
        <field name="Total"/>
     </tree>
    </field>
</record>

<!-- Dash (graph) view-->
<record id="view_sales_dashboard_record_graph" model="ir.ui.view">
     <field name="name">csi_dashopsbyday.graph</field>
     <field name="model">dashboard.sales.opsbyday</field>
     <field name="arch" type="xml">
       <graph type="bar">
         <field name="user_id"/>
         <field name="Total" type="measure"/>
       </graph>
     </field>
</record>

<record id="action_dashboard_record_tree" model="ir.actions.act_window">
   <field name="name">Total Opps By Rep Today</field>
   <field name="type">ir.actions.act_window</field>
   <field name="res_model">dashboard.sales.opsbyday</field>
   <field name="view_mode">form</field>
   <field name="view_mode">tree,kanban,form,pivot,graph</field>
   <field name="view_id" ref="view_sales_dashboard_record_graph"/>
   <!--   <field name="help">Help!!!</field> -->
</record>
 

<menuitem name="Opps by Reps today" id="menu_sale_dash_report_day" parent="sale.menu_sale_report" action="action_dashboard_record_tree" sequence="2" />


<!-- !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->

<!-- Dash tree (list) view-->
 <record id="view_sales_dashboard_record_tree_month" model="ir.ui.view">
     <field name="name">csi_dashopsbymonth.tree</field>
     <field name="model">dashboard.sales.opsbyday</field>
     <field name="arch" type="xml">
       <tree string="Schedule records">
         <field name="user_id"/>
         <field name="Total"/>
      </tree>
     </field>
 </record>




<!-- Dash month  tree (graph) view-->
 <record id="view_sales_dashboard_record_graph_month" model="ir.ui.view">
      <field name="name">csi_dashopsbymonth.graph</field>
      <field name="model">dashboard.sales.opsformonth</field>
      <field name="arch" type="xml">
        <graph type="bar">
          <field name="user_id"/>
          <field name="total" type="measure"/>
        </graph>
      </field>
 </record>
 
 <record id="action_dashboard_record_tree_month" model="ir.actions.act_window">
    <field name="name">Total Opps By Rep Month</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">dashboard.sales.opsformonth</field>
    <field name="view_mode">form</field>
    <field name="view_mode">tree,kanban,form,pivot,graph</field>
    <field name="view_id" ref="view_sales_dashboard_record_graph_month"/>
    <!--   <field name="help">Help!!!</field> -->
 </record>


<!-- Dash tree (Total) view-->
 <record id="view_sales_dashboard_totals_tree" model="ir.ui.view">
    <field name="name">csi_dashtotals.tree</field>
    <field name="model">dashboard.sales.singletotals</field>
    <field name="arch" type="xml">
      <tree string="Schedule records">
        <field name="ops_day_total" optional="hide"/>
        <field name="ops_month_total" optional="hide"/>
        <field name="ops_month_total" optional="hide"/>
        <field name="ave_sales_rep" optional="hide"/>
        <field name="Ave_Deal_Year" optional="hide"/>
      </tree>
    </field>
 </record>


 <record id="action_dashboard_record_tree_month" model="ir.actions.act_window">
    <field name="name">Sales Dashboard Totals</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">dashboard.sales.singletotals</field>
    <field name="view_mode">form</field>
    <field name="view_mode">tree,kanban,form,pivot,graph</field>
    <field name="view_id" ref="view_sales_dashboard_totals_tree"/>
 </record>
 






 <menuitem name="Sales Dashboard"   id="menu_sale_dash_report_Top" parent="sale.menu_sale_report"  sequence="2" />
 <menuitem name="Opps by Rep Today" id="menu_sale_dash_report_day" parent="menu_sale_dash_report_Top" action="action_dashboard_record_tree" sequence="3" />
 <menuitem name="Opps by Rep Month" id="menu_sale_dash_report_month" parent="menu_sale_dash_report_Top" action="action_dashboard_record_tree_month"  sequence="3" />
 <menuitem name="Sales Totals"      id="menu_sale_dash_report_totals" parent="menu_sale_dash_report_Top" action="action_dashboard_record_tree_month"  sequence="3" />
   
  
     






