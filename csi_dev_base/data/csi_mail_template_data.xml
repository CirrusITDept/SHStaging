<odoo>
    <data >
        <record id="ach_email_template_send" model="mail.template">
            <field name="name">ACH Details</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="email_from">${(object.user_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="subject">ACH Details</field>
            <field name="body_html"><![CDATA[
                <p>Hi,</p><p>&nbsp;</p><p>Bank Name: cust_bank_name</p><p>Account Number: cust_acc_number</p><p>Routing No: cust_rout_number</p><p>Account Holder:&nbsp;cust_acc_holder</p><p><br></p><p>Regards&nbsp;</p>
              ]]></field>
        </record>
    </data>
</odoo>