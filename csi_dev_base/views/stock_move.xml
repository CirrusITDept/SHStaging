<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
		<record id="view_stock_quant_tree_editable_extend_readonly" model="ir.ui.view">
			<field name="name">stock.quant.tree.editable.extend.readonly</field>
			<field name="model">stock.quant</field>
			<field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
			<field name="arch" type="xml">
				<field name="inventory_quantity" position="replace">
					<field name="inventory_quantity" string="On Hand Quantity" readonly="1"/>
				</field>
			</field>
		</record>
		
		<record id="view_stock_quant_tree_editable_extend_editable" model="ir.ui.view">
			<field name="name">stock.quant.tree.editable.extend.editable</field>
			<field name="model">stock.quant</field>
			<field name="inherit_id" ref="csi_dev_base.view_stock_quant_tree_editable_extend_readonly"/>
			<field name="groups_id" eval="[(6, 0, [ref('csi_dev_base.group_can_adjust_inventory')])]"/>
			<field name="arch" type="xml">
				<field name="inventory_quantity" position="replace">
					<field name="inventory_quantity" string="On Hand Quantity" readonly="0"/>
				</field>
			</field>
		</record>

	</data>
</odoo>