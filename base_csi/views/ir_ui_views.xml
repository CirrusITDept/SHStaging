<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  NEW VIEWS -->
    <record id="view_cancellation_warning_wizard_form" model="ir.ui.view">
        <field name="name">x_gfp.cancellation.warning.wizard.form</field>
        <field name="model">cancellation.warning.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancellation Warning">
                <group>
                    <p>
                        Are you sure you want to cancel this picking? This action cannot be undone.
                    </p>
                </group>
                <footer>
                    <button name="done_cancellation" string="CANCEL PICKING" type="object" class="btn-primary"/>
                    <button string="GO BACK WITHOUT CANCELLING" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- incoming.outgoing.report views -->
    <record model="ir.ui.view" id="view_incoming_outgoing_report_pivot">
        <field name="name">x_gfp.incoming.outgoing.report.pivot</field>
        <field name="model">incoming.outgoing.report</field>
        <field name="mode">primary</field>
        <field name="type">pivot</field>
        <field name="inherit_id" eval="False" />
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <pivot string="Rebalancing Report" disable_linking="True">
                <field name="location_id" type="row" />
                <field name="product_id" type="row" />
                <field name="product_min_qty" type="measure" />
                <field name="on_po" type="measure" />
                <field name="incoming" type="measure" />
                <field name="all_incoming" type="measure" />
                <field name="quantity" type="measure" />
                <field name="outgoing" type="measure" />
                <field name="available" type="measure" />
                <field name="net_available" type="measure" />
            </pivot>
        </field>
    </record>

</odoo>