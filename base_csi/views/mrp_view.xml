<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Manufacturing Order search view mod -->
    <record model="ir.ui.view" id="view_mrp_production_filter_mod">
        <field name="name">x_gfp.mrp.production.select.mod</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="display_id" />
            </field>
        </field>
    </record>

    <!-- Manufacturing Order form view -->
    <record model="ir.ui.view" id="mrp_production_form_view_mod">
        <field name="name">x_gfp.mrp.production.form.mod</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='open_produce_product']" position="after">
                <button name="open_quick_produce_wizard" attrs="{'invisible': ['|', '|', '|', ('state', '=', 'to_close'), ('is_locked', '=', False), ('reservation_state', '!=', 'assigned'), ('routing_id', '!=', False)]}" string="Quick Produce" type="object" class="oe_highlight" />
            </xpath>
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="display_id" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='finished_move_line_ids']//tree//field[@name='state']" position="after">
                <button name="unlink_line_assoc_lines" type="object" icon="fa-times-circle text-danger" attrs="{'invisible':['|',('lot_id','=',False),('state','in',['done','cancel','draft'])]}" />
            </xpath>
        </field>
    </record>

    <!-- Action to display manufacturing orders -->
    <record id="act_display_2_mrp_production" model="ir.actions.act_window">
        <field name="name">Manufacturing Orders</field>
        <field name="res_model">mrp.production</field>
        <field name="view_mode">form</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="context">{'search_default_display_id': active_id}</field>
    </record>
    
</odoo>